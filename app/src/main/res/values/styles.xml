<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!--<item name="android:forceDarkAllowed">true</item>-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColourPrimary</item>
        <item name="android:textColorTertiary">@color/textColourTertiary</item>
        <item name="android:textColorHint">@color/textColourHint</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:selectableItemBackground">@color/selectableItemBackground</item>
        <item name="android:navigationBarColor">@color/selectableItemBackground</item>
        <item name="android:alertDialogTheme">@style/AppTheme</item>
        <item name="background">@color/windowBackground</item>

        <item name="android:buttonStyle">@style/AppTheme.ButtonStyle</item>
        <item name="cardViewStyle">@style/AppTheme.CardViewStyle</item>
        <item name="android:windowAnimationStyle">@style/AppTheme.WindowAnimationStyle</item>
    </style>

    <style name="AppTheme.ActionBarStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="AppTheme.ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.CardViewStyle" parent="CardView.Dark">
        <item name="cardBackgroundColor">@color/cardBackgroundColor</item>
    </style>

    <style name="AppTheme.WindowAnimationStyle">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="NavViewTheme" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemBackground">@color/windowBackground</item>
    </style>

    <style name="FirebaseUITheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlNormal">@color/textColourPrimary</item>
        <item name="colorControlActivated">@color/textColourPrimary</item>
        <item name="colorControlHighlight">@color/textColourPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@color/textColourPrimary</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
    </style>

</resources>
